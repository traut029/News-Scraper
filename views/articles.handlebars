<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle"></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="modal-notes">
        </div>
        <div class="note-input text-center">
          <textarea id="new-note-input" placeholder="New Note"></textarea>
            <button class="btn btn-primary new-note-button">New Note</button>
        </div>
      
      </div>
      <div class="modal-footer">
        
         
         
        
          
</textarea>
          
      
      </div>
    </div>
  </div>
</div>

 
<div id="article-div">
   {{#each articles}}
   <div class="card" id="{{this._id}}" >
  <div class="card-header" > 
    <h2><a href="{{this.link}}">{{this.title}}</a></h2>
    <button class="delete-article">Delete From Saved</button>
    <button class="article-notes" data-toggle="modal" data-target="#myModal">Article Notes</button>
    </div> 
    <p>{{this.summary}}</p>
    </div>
  {{/each}}

</div>

